{
  "compilerOptions": {
    "jsx": "react-jsx",
    "target": "ES2020",
    "module": "commonjs",
    "lib": [
      "es2020",
      "dom",
      "DOM.Iterable"
    ],
    "outDir": "./dist",
    "declaration": true,
    "strict": true,
    "checkJs": true,
    "noImplicitAny": true,
    "noEmit": false,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": false,
    "inlineSourceMap": true,
    "inlineSources": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true, 
    "strictPropertyInitialization": false,
    "typeRoots": [
      "./node_modules/@types"
    ],
  },
  
  "exclude": [
    "dist",
    "node_modules",
    "cdk.out",
    "lib/user-interface/genai-newsletter-ui", 
    "lib/api/resolverFunctions/*.js",
    "lib/user-interface/newsletter-article-edge-router/*"
  ],
  "include": [
    "bin/",
    "lib/",
    "cli/",
    "lib/newsletter-generator/react-email-generator/tsconfig.json"
  ]
} 